<p id="notice"><%= notice %></p>

<h1 class="my-5">Items</h1>


<div class="container my-3">
  <div class="row" >
    <% @items.sort_by(&:id).each do |item| %>
      <div class="card mx-3" style="width: 18rem;">
          <div class="card-body">
            <h2 class="card-title"><%= link_to item.name, item %></h2>
            <h5 class="card-text"><%= item.description %></h5>
            <h3 class="card-text">RM <%= item.price %></h3>
            <a href="#" class="btn btn-primary"><i class="bi bi-cart-plus"></i></a>
            <%= link_to edit_item_path(item), class: "btn btn-warning" do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>




<br>

<%= link_to 'New Item', new_item_path, class: 'btn btn-success text-light' %>
